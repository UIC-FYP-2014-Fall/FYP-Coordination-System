<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
  <form-beans >
    <form-bean name="userForm" type="com.uic.web.struts.form.UserForm" />

    <form-bean name="teacherForm" type="com.uic.web.struts.form.TeacherForm" />

    <form-bean name="changePwdForm" type="com.uic.web.struts.form.ChangePwdForm" />

  </form-beans>

  <global-exceptions />
  <global-forwards >
    <forward name="goLogin" path="/index.jsp" />

  </global-forwards>

  <action-mappings >
    
    <action
      parameter="flag"
      path="/goUI"
      type="com.uic.web.struts.action.GoUIAction"
      validate="false"
      cancellable="true" >
      <forward name="goMainUi" path="/WEB-INF/logined/Coordinator/main.jsp" />
      <forward name="goTeacherMain" path="/WEB-INF/logined/Teacher/teacherMain.jsp" />
      
      
    </action>
    <action
      attribute="teacherForm"
      input="/WEB-INF/logined/Coordinator/manageAccount.jsp"
      name="teacherForm"
      parameter="flag"
      path="/goManageAccountUi"
      scope="request"
      type="com.uic.web.struts.action.GoManageAccountUiAction"
      validate="false"
      cancellable="true">
      <forward name="goManageAccountUi" path="/WEB-INF/logined/Coordinator/manageAccount.jsp" />
    </action>
    <action
      attribute="userForm"
      input="/WEB-INF/login.jsp"
      name="userForm"
      path="/login"
      scope="request"
      type="com.uic.web.struts.action.LoginAction"
      validate="false"
      cancellable="true">
      <forward name="loginok" path="/goUI.do" />
      <forward name="goLoginUi" path="/WEB-INF/login.jsp" />
    </action>
    <action
      path="/logout"
      type="com.uic.web.struts.action.LogoutAction"
      validate="false"
      cancellable="true" >
      <forward name="goLoginUi" path="/WEB-INF/login.jsp" />
    </action>
    <action
      parameter="flag"
      path="/teacherPageControl"
      scope="request"
      type="com.uic.web.struts.action.TeacherPageControlAction"
      cancellable="true">
      <forward name="changePwd" path="/WEB-INF/logined/Teacher/changePwd.jsp" />
      <forward name="chooseObserver" path="/WEB-INF/logined/Teacher/chooseObserver.jsp" />
      <forward name="topicList" path="/WEB-INF/logined/Teacher/topicList.jsp" />
      <forward name="mainPage" path="/WEB-INF/logined/Teacher/teacherMain.jsp" />
      <forward name="timetable" path="/WEB-INF/logined/Teacher/timetable.jsp" />
      <forward name="uploadTopic" path="/WEB-INF/logined/Teacher/uploadTopic.jsp" />
    </action>
    <action
      attribute="changePwdForm"
      input="/WEB-INF/logined/Teacher/changePwd.jsp"
      name="changePwdForm"
      parameter="flag"
      path="/changePwd"
      scope="request"
      type="com.uic.web.struts.action.ChangePwdAction"
      cancellable="true">
      <forward name="changePwdOk" path="/logout.do" />
      <forward name="changePwdErr" path="/WEB-INF/logined/Teacher/changePwd.jsp" />
    </action>
  </action-mappings>

  <message-resources parameter="com.uic.web.struts.ApplicationResources" />
</struts-config>

